                            fullWidth
                            s-ref="detailFilterInputBox"
                            on-input-keypress="doFilter($event)"
                        />
                    </div>
                </div>
                <div class="panel-container">
                    <div class="ex-panel-wrapper" style="display:{{panelVisibility.bi?'block':'none'}}">
