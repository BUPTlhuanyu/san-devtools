                            >
                            </sandevtool-component-messages>
                        </san-expansion-panel>
                    </div>
                    <div class="ex-panel-wrapper" style="display:{{panelVisibility.l?'block':'none'}}">
                        <san-expansion-panel title="Listeners" open="{{!0}}">
                            <sandevtool-component-listeners
                                cid="{{cid}}"
                                s-ref="cl"
                                filterText="{{filterText}}"
                            >
                            </sandevtool-component-listeners>
                        </san-expansion-panel>
                    </div>
